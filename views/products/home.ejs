<%- include("../partials/header")%>
<%- include("../partials/navbar")%>
<main>
    <%- include("../partials/flash")%>
    <h1>Products Available</h1>
    <div id="contents">
        <%for(let product of products){%>
            <div id="card">
                <img style="width: 260px;" src="<%-product.img%>">
                <h4><%=product.name%></h4>
                <p><%=product.desc%></p>
                <h4>Rs. <%=product.price%></h4>
                <a href="/products/<%=product._id%>"><button id="show" type="submit">Show Product</button></a>
            </div>
        <%}%>
    </div>

</main>
<%- include("../partials/footer")%>